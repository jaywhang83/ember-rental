{{yield}}

{{#if addNewAnnouncement}}
<h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="sale">Up coming Sale</label>
        {{input value=sale id="sale"}}
      </div>

      <div class="form-group">
        <label for="weather">Weather Condition</label>
        {{input value=weather id="weather"}}
      </div>

      <div class="form-group">
        <label for="news">News</label>
        {{input value=news id="news"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}> New Announcement</button>
{{/if}}
